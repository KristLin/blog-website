<%- include("patials/header") -%>

<div class="container">
  <h1 class="page-title">Home Page</h1>
  <p><%= homeContent %></p>
  <% posts.forEach(function(post) { %>
  <h2><%= post.title %></h2>
  <p>
    <%= post.content.substring(0, 80) + (post.content.length > 80 ? " ..." : ""); %>
    <a href="/posts/<%= post._id %>">Read More</a>
  </p>
  <% }) %>
</div>

<%- include("patials/footer") -%>
